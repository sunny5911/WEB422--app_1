<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <link rel="stylesheet" href="/public/style.css">
  <title>Movies</title>
</head>

<body>
  <div class="container">
    <form action="/AllMovies" method="POST">
      <div class="form-group">
        <div class="row ">
          <div class="col-2">
            <label for="">Go to Page</label>
            <input min="1" type="number" name="page" id="" class="form-control col-sm" required value=<%=page %>>
          </div>
          <div class="col-2">
            <label for="">Per Page</label>
            <input min="1" type="number" name="perPage" id="" class="form-control col-sm" required value=<%=perPage
                        %>>
          </div>
          <div class="col-3">
            <label for="">Movie Title</label>
            <input name="title" id="" class="form-control col-sm" value="<%=title %>">
          </div>
          <div class="col-2 d-flex align-items-end">
            <input type="submit" class="form-control btn btn-success mx-2" value="Search Movie">
            </div>
            <div class="col-2 d-flex align-items-end">
              <a href="/Movie/add">
                <input class="form-control btn btn-primary mx-2" value="Add Movie">
              </a>
            </div>
        </div>
      </div>
    </form>
    <div class="row pt-5">
      <% for(var i=0; i<movies.length; i++) { %>
      <div class="col-4 pb-5">
        <div class="main_card">
          <div class="card_left">
            <div class="card_datails">
           <div class="d-flex justify-content-center ">
             <img src="<%=movies[i].poster%>" style="width: 100px;" alt="">
           </div>
              <h1>
                <%=movies[i].title %>
              </h1>
              <div class="card_cat">
                <p class="year">
                  <%=movies[i].year %>
                </p>
                <p class="genre">
                  <%=movies[i].genres %>
                </p>
              </div>
              <p class="disc">
                <%=movies[i].plot %>
              </p>
              <a href="/Movie?id=<%=movies[i].id %>" target="_top">Read More</a>
            </div>
          </div>
          </div>
          </div>
          <% } %>
          </div>
          </div>
</body>

</html>